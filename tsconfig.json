{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", // enable the new JSX transform
    "allowJs": true, // ‚Üê important: allow importing .js/.jsx
    "checkJs": false, // optional: skip type-checking in .js/.jsx
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*" // picks up .ts, .tsx, .js, .jsx
  ]
}
